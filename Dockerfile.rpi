FROM hypriot/rpi-node:latest

# 앱 디렉터리 생성
RUN mkdir -p /usr/src/app
WORKDIR /usr/src/app

# 앱 의존성 설치
COPY package.json /usr/src/app/
COPY bower.json /usr/src/app/
COPY .bowerrc /usr/src/app/
RUN npm install && npm install -g bower
RUN bower install --allow-root


# 앱 소스 추가
COPY . /usr/src/app

CMD [ "npm", "start" ]
